# Create a new, cleaner .gitignore
cat > .gitignore << 'EOF'
# Python
__pycache__/
*.pyc
*.pyo
*.pyd
.Python
env/
venv/
.venv/
pip-log.txt

# Environment variables
.env
*.env

# Credentials (IMPORTANT - don't upload these!)
credentials.json

# AI models/databases
docs/
*.db

# Project folders to ignore (only these specific ones)
old/

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db
EOF